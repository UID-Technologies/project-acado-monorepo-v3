# =============================================================================
# ACADO Platform - Docker Compose Environment Variables
# Copy this file to .env and update values for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# JWT secret key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars

# JWT token expiration (e.g., 1h, 7d, 30d)
JWT_EXPIRES_IN=7d

# CORS allowed origins (comma-separated or * for all)
CORS_ORIGIN=*

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# MongoDB Configuration
# MongoDB is running locally on the VM, container connects via host.docker.internal
# -----------------------------------------------------------------------------
# Default: mongodb://host.docker.internal:27017/acadodb
# If using authentication: mongodb://username:password@host.docker.internal:27017/acadodb?authSource=admin

# -----------------------------------------------------------------------------
# Azure Blob Storage (Optional - for file uploads)
# -----------------------------------------------------------------------------
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=uploads

# -----------------------------------------------------------------------------
# Email Configuration (Optional - for email notifications)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@acado.ai

# -----------------------------------------------------------------------------
# Frontend URLs (passed as build args)
# Update these to match your Azure VM's public IP or domain
# -----------------------------------------------------------------------------

# API URL for Admin Dashboard
# Example: http://your-azure-vm-ip:5000 or https://api.yourdomain.com
ADMIN_API_URL=http://localhost:5000

# API URL for Client Application
# Example: http://your-azure-vm-ip:5000 or https://api.yourdomain.com
CLIENT_API_URL=http://localhost:5000

# Client Application URL (for OAuth redirects, etc.)
# Example: http://your-azure-vm-ip or https://yourdomain.com
CLIENT_APP_URL=http://localhost

# -----------------------------------------------------------------------------
# Google OAuth (Optional - for social login)
# -----------------------------------------------------------------------------
VITE_GOOGLE_CLIENT_ID=
VITE_GOOGLE_CLIENT_SECRET=
VITE_GOOGLE_REDIRECT_URI=

# -----------------------------------------------------------------------------
# Firebase Configuration (Optional - for push notifications)
# -----------------------------------------------------------------------------
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
VITE_FIREBASE_MEASUREMENT_ID=

