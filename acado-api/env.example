NODE_ENV=production
PORT=5000
MONGO_URI=mongodb://username:password@host:27017/acedodb

# JWT secrets (required in production)
JWT_ACCESS_SECRET=replace-with-strong-secret
JWT_REFRESH_SECRET=replace-with-strong-secret

# Token expiry (optional)
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Frontend URL (for password reset emails, etc.)
FRONTEND_URL=http://localhost:3000

# Email configuration (Azure SMTP)
MAIL_HOST=smtp.azurecomm.net
MAIL_PORT=587
MAIL_USERNAME=your-azure-communication-service.endpoint
MAIL_PASSWORD=your-azure-communication-service-key
MAIL_FROM_ADDRESS=DoNotReply@your-domain.com
MAIL_PREVIEW=false

# Allowed CORS origins (comma separated)
CORS_ORIGIN=http://localhost:8080,http://localhost:5173

# Azure Blob Storage (for file uploads)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=xxx;AccountKey=xxx;EndpointSuffix=core.windows.net
AZURE_CONTAINER_NAME=uploads
AZURE_STORAGE_ACCOUNT_URL=https://your-storage-account.blob.core.windows.net

